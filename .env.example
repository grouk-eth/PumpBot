# Basic network & wallet
RPC_URL=https://api.devnet.solana.com
PRIVATE_KEY_BASE58=  # put base58 private key for Vercel (or use PRIVATE_KEY_PATH locally)
PRIVATE_KEY_PATH=./devnet-keypair.json  # use locally for dev (Vercel can't read local file)

# Bot settings / safety
DRY_RUN=true
MAX_SPEND_SOL=0.01
MAX_SLIPPAGE_PCT=3
MAX_POSITION_SIZE_SOL=0.05

# Watcher / sources
WATCH_ENDPOINT=https://api.pump.fun/v1/hot?limit=10
CHECK_INTERVAL_MS=2000

# Auto-sell rule
BIG_BUY_USD_THRESHOLD=50000   # if aggregated buys > this in short window -> trigger sell
BIG_BUY_WINDOW_MS=60000       # window to consider big buys (ms)

# Telegram
TELEGRAM_BOT_TOKEN=your_bot_token
TELEGRAM_CHAT_ID=@your_channel_or_group

# Optional: for production RPC (QuickNode/Alchemy)
# RPC_URL=https://solana-mainnet.g.alchemy.com/v2/XXXX
